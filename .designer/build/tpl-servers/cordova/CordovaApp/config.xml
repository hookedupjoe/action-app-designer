<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hookedup.hellomobile02" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Action App - Hello Mobile V2</name>
    <description>
        Action Application Environment for Cordova Mobile Apps
    </description>
    <author email="hookedupjoe@gmail.com" href="http://www.hookedup.com">
        Joseph Francis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
